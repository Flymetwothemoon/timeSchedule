<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bf">


    <TextView
        android:id="@+id/intake_title7"
        android:layout_width="173dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:text="今日已完成："
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/intake_title"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/intake_title"
        app:layout_constraintTop_toBottomOf="@+id/intake_title" />

    <TextView
        android:id="@+id/water_title"
        android:layout_width="180dp"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:text="喝水提醒"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/intake_title"
        android:layout_width="170dp"
        android:layout_height="41dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:text="今日摄入量："
        android:textSize="25dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/water_title"
        app:layout_constraintTop_toBottomOf="@+id/water_title" />

    <View
        android:id="@+id/view"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="#0C0C0C"
        app:layout_constraintBottom_toBottomOf="@+id/intake_title"
        app:layout_constraintStart_toEndOf="@+id/intake_title"
        app:layout_constraintTop_toBottomOf="@+id/intake_title" />

    <View
        android:id="@+id/view4"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="#0C0C0C"
        app:layout_constraintBottom_toBottomOf="@+id/intake_title7"
        app:layout_constraintStart_toEndOf="@+id/intake_title7"
        app:layout_constraintTop_toBottomOf="@+id/intake_title7" />

    <TextView
        android:id="@+id/water_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"

        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1500ml"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/intake_title"
        app:layout_constraintTop_toBottomOf="@+id/intake_title" />

    <TextView
        android:id="@+id/water_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintStart_toStartOf="@+id/view4" />

    <ImageView
        android:id="@+id/drink_enter"
        android:layout_width="27dp"
        android:layout_height="36dp"
        android:clickable="true"
        android:background="@drawable/ic_baseline_east_24"
        app:layout_constraintBottom_toBottomOf="@+id/water_title"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/water_title" />


</androidx.constraintlayout.widget.ConstraintLayout>