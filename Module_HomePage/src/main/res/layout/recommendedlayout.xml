<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="280dp"
        android:layout_height="120dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="105dp"
                android:layout_height="120dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/foodtwo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/yellowfishtext"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="干锅黄骨鱼"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/cardView3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/menu_0"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="33dp"
                android:text="湘菜人气菜品"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="@+id/yellowfishtext"
                app:layout_constraintTop_toTopOf="@+id/yellowfishtext" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:background="@mipmap/whattime"
                app:layout_constraintStart_toStartOf="@+id/menu_0"
                app:layout_constraintTop_toTopOf="@+id/menu_0" />

            <TextView
                android:id="@+id/cooktime_0"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="15 Min"
                android:textColor="@color/black"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:background="@mipmap/whathard"
                app:layout_constraintStart_toEndOf="@+id/cooktime_0"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <TextView
                android:id="@+id/hard_0"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="MIDDLE"
                android:textColor="@color/black"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="105dp"
                android:layout_height="120dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/foodthree" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/zhajiangnoodleText"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="炸酱面"
                android:textColor="@color/black"

                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/cardView4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/menu_1"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="33dp"
                android:text="北京菜人气菜品"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="@+id/zhajiangnoodleText"
                app:layout_constraintTop_toTopOf="@+id/zhajiangnoodleText" />

            <ImageView

                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:background="@mipmap/whattime"
                app:layout_constraintStart_toStartOf="@+id/menu_1"
                app:layout_constraintTop_toTopOf="@+id/menu_1" />

            <TextView
                android:id="@+id/cooktime_1"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="20 Min"
                android:textColor="@color/black"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5" />

            <ImageView

                android:id="@+id/imageView6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:background="@mipmap/whathard"
                app:layout_constraintStart_toEndOf="@+id/cooktime_1"
                app:layout_constraintTop_toTopOf="@+id/imageView5" />

            <TextView
                android:id="@+id/hard_1"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="EASY"
                android:textColor="@color/black"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/menu_1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>