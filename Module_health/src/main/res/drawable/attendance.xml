<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape>
        <corners
            android:radius="30dp"/>
        <gradient
            android:endColor="#35C7F6"
            android:startColor="#4A6DF6"
            android:angle="90"
            />
    </shape>
</item>
    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="30dp"/>
            <gradient
                android:endColor="#3F8EF6"
                android:startColor="#4A6DF6"
                android:angle="90"
                />
        </shape>
    </item>
</selector>